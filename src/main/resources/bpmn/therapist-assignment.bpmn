<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL"
                  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
                  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
                  xmlns:zeebe="http://camunda.org/schema/zeebe/1.0"
                  id="therapist-assignment"
                  targetNamespace="http://psikohekim.com/bpmn">
  <bpmn:process id="TherapistAssignmentProcess" isExecutable="true">
    <bpmn:documentation>Danışman atama süreci - mesaj ile başlar, terapist kararı ile sonlanır</bpmn:documentation>
    <bpmn:startEvent id="StartEvent_Message" name="Atama İsteği">
      <bpmn:messageEventDefinition messageRef="Message_StartTherapistAssignment"/>
    </bpmn:startEvent>
    <bpmn:sequenceFlow id="Flow_StartToCreate" sourceRef="StartEvent_Message" targetRef="Task_CreateAssignment"/>
    <bpmn:serviceTask id="Task_CreateAssignment" name="Backend'e Atama Oluştur">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="create-assignment" retries="3"/>
      </bpmn:extensionElements>
    </bpmn:serviceTask>
    <bpmn:sequenceFlow id="Flow_CreateToCatch" sourceRef="Task_CreateAssignment" targetRef="CatchEvent_TherapistDecision"/>
    <bpmn:intermediateCatchEvent id="CatchEvent_TherapistDecision" name="Terapist Kararı Bekleniyor">
      <bpmn:messageEventDefinition messageRef="Message_TherapistDecision"/>
      <bpmn:extensionElements>
        <zeebe:subscription correlationKey="=processInstanceKey"/>
      </bpmn:extensionElements>
    </bpmn:intermediateCatchEvent>
    <bpmn:sequenceFlow id="Flow_CatchToEnd" sourceRef="CatchEvent_TherapistDecision" targetRef="EndEvent_Done"/>
    <bpmn:endEvent id="EndEvent_Done" name="Süreç Tamamlandı"/>
    <bpmn:message id="Message_StartTherapistAssignment" name="startTherapistAssignmentProcess"/>
    <bpmn:message id="Message_TherapistDecision" name="therapist_decision"/>
  </bpmn:process>
  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="TherapistAssignmentProcess">
      <bpmndi:BPMNShape id="StartEvent_Message_di" bpmnElement="StartEvent_Message">
        <dc:Bounds x="152" y="102" width="36" height="36"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Task_CreateAssignment_di" bpmnElement="Task_CreateAssignment">
        <dc:Bounds x="240" y="80" width="100" height="80"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="CatchEvent_TherapistDecision_di" bpmnElement="CatchEvent_TherapistDecision">
        <dc:Bounds x="392" y="102" width="36" height="36"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="EndEvent_Done_di" bpmnElement="EndEvent_Done">
        <dc:Bounds x="480" y="102" width="36" height="36"/>
      </bpmndi:BPMNShape>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</bpmn:definitions>
