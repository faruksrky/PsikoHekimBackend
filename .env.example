# PsikoHekim Backend - Production Environment Variables
# Bu dosyayı .env olarak kopyala ve değerleri doldur:
# cp .env.example .env

# === PostgreSQL ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GÜÇLÜ_ŞİFRE_BURAYA

# === Redis ===
REDIS_PASSWORD=GÜÇLÜ_REDIS_ŞİFRE_BURAYA

# === Keycloak ===
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=GÜÇLÜ_KEYCLOAK_ŞİFRE
# Backend JWT doğrulaması - token'daki issuer ile AYNI olmalı
# Domain kurulunca: https://auth.iyihislerapp.com/realms/psikohekim
KEYCLOAK_ISSUER_URI=http://187.77.77.215:8080/realms/psikohekim
KEYCLOAK_HOSTNAME=

# === Backend URLs (iyihislerapp.com) ===
# Domain kurulunca Cloudflare'da api.iyihislerapp.com ekle
WEBHOOK_BASE_URL=https://api.iyihislerapp.com
GOOGLE_REDIRECT_URI=https://api.iyihislerapp.com/api/google-calendar/callback
FRONTEND_URL=https://iyihislerapp.com

# === BPMN Service (ayrı deploy ediyorsan) ===
BPMN_SERVICE_URL=http://bpmn:8082
# Veya: BPMN_SERVICE_URL=http://SUNUCU_IP:8082

# === Google OAuth (Calendar API) ===
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# === Twilio (WhatsApp) ===
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# === Microsoft Graph (Outlook) ===
MICROSOFT_GRAPH_CLIENT_ID=
MICROSOFT_GRAPH_CLIENT_SECRET=
MICROSOFT_GRAPH_TENANT_ID=
MICROSOFT_GRAPH_REDIRECT_URI=
